<figure class= 'attachement attachement--<%= blob.representable? ? "preview" : "file" %> attachement--<%= blob.filement.extension %>' >
    <% if blob.representation? %>
        <%= image_tag blob.representation(resize_to_limit: local_assign[:in_gallery] ? [800, 600] : [1024,768]), alt: blob.filename.to_s %>
    <% end %>

    <figcaption class="attachement__caption">
        <% if caption = blob.try(:caption) %>
            <%= caption %>
        <% else %>
            <span class="attachment_name"><%= blob.filename %></span>
            <span class="attachment_size"><%= number_to_human_size blob.byte_size %></span>
        <% end %>
    </figcaption>
</figure>